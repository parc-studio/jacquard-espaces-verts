---
import '@/styles/reset.css'
import '@/styles/tokens.css'
import '@/styles/globals.css'
import '@/styles/utils.css'

import { ClientRouter } from 'astro:transitions'
import { SEO } from 'astro-seo'
// TODO: Uncomment when using custom fonts
// import { Font } from 'astro:assets'

import AgentationWrapper from '@/components/helpers/AgentationWrapper'
import MainGrid from '@/components/helpers/MainGrid.svelte'
import PageTransitions from '@/components/helpers/PageTransitions.astro'
import ParcCredits from '@/components/helpers/ParcCredits.astro'
import { getSettings } from '@/data/sanity'
import { isDevMode } from '@/utils'

import App from '../components/App.svelte'
import VisualEditing from '../components/VisualEditing.svelte'

interface Props {
  title?: string
  description?: string
  image?: string
  isPreview?: boolean
  pagePath?: string
}

const {
  title,
  description,
  image = '/og-image.png',
  isPreview = false,
  pagePath = '',
} = Astro.props

let settings = null
try {
  settings = await getSettings({ preview: isPreview })
} catch (error) {
  console.error('[BaseLayout] Unable to load settings:', error)
}

const resolvedTitle = title || 'Jacquard Espaces Verts'
const resolvedDescription = description || settings?.shortDescription || 'Jacquard Espaces Verts'

const siteUrl = import.meta.env.SITE_URL || 'http://localhost:4321'
const enableFeedback = import.meta.env.PUBLIC_ENABLE_FEEDBACK === 'true'
const showAgentation = isDevMode || enableFeedback
const agentationMode = isDevMode ? 'dev' : 'review'
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <!-- TODO: Uncomment for custom fonts with preload -->
    <!-- <Font cssVariable="--font-sans" preload /> -->
    <!-- <Font cssVariable="--font-classic" preload /> -->
    <SEO
      title={resolvedTitle}
      description={resolvedDescription}
      openGraph={{
        basic: {
          title: resolvedTitle,
          type: 'website',
          image: image,
          url: siteUrl,
        },
        optional: {
          description: resolvedDescription,
        },
      }}
    />
    <ClientRouter />
    {!isPreview && <PageTransitions />}
  </head>
  <body>
    <App client:load />
    <MainGrid client:only="svelte" />
    <slot />
    {
      settings && (
        <footer class="site-footer main-grid">
          <section class="footer-about">
            <h2>À propos</h2>
            <p>{settings.shortDescription}</p>
          </section>

          <section class="footer-links">
            {settings.address && <p>{settings.address}</p>}
            {settings.telephone && <a href={`tel:${settings.telephone}`}>Téléphone</a>}
            {settings.email && <a href={`mailto:${settings.email}`}>Mail</a>}
            {settings.instagram && (
              <a href={settings.instagram} target="_blank" rel="noopener noreferrer">
                Instagram
              </a>
            )}
            {settings.linkedin && (
              <a href={settings.linkedin} target="_blank" rel="noopener noreferrer">
                LinkedIn
              </a>
            )}
          </section>
        </footer>
      )
    }
    {isPreview && <VisualEditing pagePath={pagePath} client:only="svelte" transition:persist />}
    {showAgentation && <AgentationWrapper client:only="react" mode={agentationMode} />}
  </body>
</html>

<style is:global>
  /* Disable default View Transition root animations — GSAP controls these */
  ::view-transition-old(root),
  ::view-transition-new(root) {
    animation: none;
  }

  .site-footer {
    background: var(--color-primary);
    color: var(--color-secondary);
    margin-top: var(--size-64);
    padding-block: var(--size-24);
  }

  .site-footer h2 {
    font-size: var(--text-12);
    text-transform: uppercase;
    margin-bottom: var(--size-12);
  }

  .site-footer p,
  .site-footer li {
    font-size: var(--text-14);
    line-height: var(--line-height-normal);
  }

  .site-footer ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .footer-about,
  .footer-links {
    grid-column: 1 / -1;
    margin-bottom: var(--size-16);
  }

  .footer-links {
    display: flex;
    flex-wrap: wrap;
    gap: var(--size-24);
    margin-bottom: 0;
  }

  .footer-links a {
    color: var(--color-secondary);
    text-decoration: none;
    font-size: var(--text-20);
  }

  .footer-links a:focus-visible,
  .footer-links a:hover {
    opacity: 0.7;
  }

  @media (min-width: 1024px) {
    .footer-about {
      grid-column: 1 / 5;
    }

    .footer-links {
      grid-column: 5 / -1;
      justify-content: space-between;
      align-items: end;
    }
  }
</style>

{isDevMode && <ParcCredits />}
