---
import '@/styles/reset.css'
import '@/styles/tokens.css'
import '@/styles/globals.css'
import '@/styles/utils.css'

import { ClientRouter } from 'astro:transitions'
import { SEO } from 'astro-seo'
import { Font } from 'astro:assets'

import AgentationWrapper from '@/components/helpers/AgentationWrapper'
import GridDebugOverlay from '@/components/helpers/GridDebugOverlay.svelte'
import ParcCredits from '@/components/helpers/ParcCredits.astro'
import SiteFooter from '@/components/SiteFooter.astro'
import SiteHeader from '@/components/SiteHeader.astro'
import { getSettings } from '@/data/sanity'
import { isDevMode } from '@/utils'

import VisualEditing from '../components/VisualEditing.svelte'

interface Props {
  title?: string
  description?: string
  image?: string
  isPreview?: boolean
  pagePath?: string
  hideFooter?: boolean
  hideHeader?: boolean
  contentBackground?: string
}

const {
  title,
  description,
  image = '/og-image.png',
  isPreview = false,
  pagePath = '',
  hideFooter = false,
  hideHeader = false,
  contentBackground,
} = Astro.props

let settings = null
try {
  settings = await getSettings({ preview: isPreview })
} catch (error) {
  console.error('[BaseLayout] Unable to load settings:', error)
}

const resolvedTitle = title || 'Jacquard Espaces Verts'
const resolvedDescription = description || settings?.shortDescription || 'Jacquard Espaces Verts'

const siteUrl = import.meta.env.SITE_URL || 'http://localhost:4321'
const enableFeedback = import.meta.env.PUBLIC_ENABLE_FEEDBACK === 'true'

const agentationMode = isDevMode ? 'dev' : 'review'
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <!-- TODO: Uncomment for custom fonts with preload -->
    <Font cssVariable="--font-sans" preload />
    <!-- <Font cssVariable="--font-classic" preload /> -->
    <SEO
      title={resolvedTitle}
      description={resolvedDescription}
      openGraph={{
        basic: {
          title: resolvedTitle,
          type: 'website',
          image: image,
          url: siteUrl,
        },
        optional: {
          description: resolvedDescription,
        },
      }}
    />
    <ClientRouter />
  </head>
  <body>
    <GridDebugOverlay client:only="svelte" />
    {!hideHeader && <SiteHeader pagePath={pagePath} />}
    <div
      class="site-content"
      style={contentBackground ? `background: ${contentBackground}` : undefined}
    >
      <slot />
    </div>
    {!hideFooter && <SiteFooter isPreview={isPreview} />}
    {isPreview && <VisualEditing pagePath={pagePath} client:only="svelte" transition:persist />}
    {enableFeedback && <AgentationWrapper client:only="react" mode={agentationMode} />}
  </body>
</html>

<style is:global>
  /* Sequential fade-out â†’ fade-in page transition */
  ::view-transition-old(root) {
    animation: var(--transition-duration) ease forwards fade-out;
    z-index: 2;
  }

  ::view-transition-new(root) {
    animation: var(--transition-duration) ease var(--transition-delay) forwards fade-in;
    z-index: 1;
  }

  @keyframes fade-out {
    to {
      opacity: 0;
    }
  }

  @keyframes fade-in {
    from {
      opacity: 0;
    }
  }

  @media (prefers-reduced-motion: reduce) {
    ::view-transition-old(root),
    ::view-transition-new(root) {
      animation-duration: 0s;
      animation-delay: 0s;
    }
  }

  .site-content {
    position: relative;
    z-index: 2;
  }
</style>

{isDevMode && <ParcCredits />}
